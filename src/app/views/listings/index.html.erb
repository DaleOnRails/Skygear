<!-- <h1>Listings</h1> -->
<div class="center">
  <div class="row">

    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.productimage), listing %>
        <div class="caption">
          <h3><%= listing.item %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= "Sold by #{listing.user.name}" %></p>
          <p><%= listing.location %></p>
          <p><%= listing.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path %>
<% end %>
